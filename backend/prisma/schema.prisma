generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          Int          @id @default(autoincrement())
  email       String       @unique
  username    String       @unique
  password    String
  patterns    Pattern[]
  newPatterns NewPattern[]
  projects    Project[]
}

model Pattern {
  id              Int              @id @default(autoincrement())
  name            String
  description     String?
  userId          Int
  createdAt       DateTime         @default(now())
  text            String
  user            User             @relation(fields: [userId], references: [id])
  projectPatterns ProjectPattern[]
}

model Project {
  id              Int              @id @default(autoincrement())
  name            String
  description     String?
  userId          Int
  createdAt       DateTime         @default(now())
  user            User             @relation(fields: [userId], references: [id])
  projectPatterns ProjectPattern[]
}

model ProjectPattern {
  id        Int     @id @default(autoincrement())
  projectId Int
  patternId Int
  rotX      Float
  rotY      Float
  rotZ      Float
  x         Float
  y         Float
  z         Float
  pattern   Pattern @relation(fields: [patternId], references: [id])
  project   Project @relation(fields: [projectId], references: [id])
}

model NewPattern {
  id          Int      @id @default(autoincrement())
  name        String
  description String?
  text        String   @db.Text
  user        User     @relation(fields: [userId], references: [id])
  userId      Int
  points      Point[]
  createdAt   DateTime @default(now())
}

model Point {
  id           Int        @id @default(autoincrement())
  x            Float
  y            Float
  z            Float
  color        String
  newPattern   NewPattern @relation(fields: [newPatternId], references: [id], onDelete: Cascade)
  newPatternId Int
}
